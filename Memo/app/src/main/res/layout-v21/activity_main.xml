<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.nicco.memo.memo.Main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="0dp">

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ftr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ftr_height"
        android:animateLayoutChanges="true"
        android:background="@color/light"
        android:elevation="2dp"
        android:filterTouchesWhenObscured="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/menu_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ftr_img_list"
                android:layout_width="@dimen/ftr_icon_size"
                android:layout_height="@dimen/ftr_icon_size"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:contentDescription="@string/menu_txt_list"
                android:src="@drawable/icon_list" />

            <TextView
                android:id="@+id/ftr_txt_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_txt_list"
                android:textAlignment="center"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ftr_img_note"
                android:layout_width="@dimen/ftr_icon_size"
                android:layout_height="@dimen/ftr_icon_size"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:contentDescription="@string/menu_txt_note"
                android:src="@drawable/icon_file" />

            <TextView
                android:id="@+id/ftr_txt_add_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_txt_note"
                android:textAlignment="center"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ftr_img_photo"
                android:layout_width="@dimen/ftr_icon_size"
                android:layout_height="@dimen/ftr_icon_size"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:contentDescription="@string/menu_txt_photo"
                android:src="@drawable/icon_camera" />

            <TextView
                android:id="@+id/ftr_txt_add_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_txt_photo"
                android:textAlignment="center"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_voice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ftr_img_voice"
                android:layout_width="@dimen/ftr_icon_size"
                android:layout_height="@dimen/ftr_icon_size"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:contentDescription="@string/menu_txt_voice"
                android:src="@drawable/icon_microphone" />

            <TextView
                android:id="@+id/ftr_txt_add_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_txt_voice"
                android:textAlignment="center"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ftr_img_settings"
                android:layout_width="@dimen/ftr_icon_size"
                android:layout_height="@dimen/ftr_icon_size"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:contentDescription="@string/menu_txt_settings"
                android:src="@drawable/icon_cog" />

            <TextView
                android:id="@+id/ftr_txt_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_txt_settings"
                android:textAlignment="center"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
