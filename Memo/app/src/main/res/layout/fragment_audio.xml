<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.nicco.memo.memo.frag_audio">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag_audio_rec"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginBottom="157dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView2"
            android:layout_weight="1"
            android:layout_marginBottom="45dp"
            android:layout_above="@+id/frag_audio_rec"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag_audio_stop"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:layout_alignBaseline="@+id/frag_audio_pause"
            android:layout_alignBottom="@+id/frag_audio_pause"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag_audio_pause"
            android:layout_alignBaseline="@+id/frag_audio_rec"
            android:layout_alignBottom="@+id/frag_audio_rec"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold" />

    </RelativeLayout>

</FrameLayout>
