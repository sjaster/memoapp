<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.nicco.memo.memo.frag_audio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/custLightGrey"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <LinearLayout
                android:id="@+id/frag_audio_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/frag_audio_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Title"/>

                <ImageView
                    android:id="@+id/frag_audio_trash"
                    android:layout_width="@dimen/ftr_icon_size"
                    android:layout_height="@dimen/ftr_icon_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/default_padding"
                    android:adjustViewBounds="false"
                    android:contentDescription="@string/btn_trash"
                    android:src="@drawable/icn_trash" />

                <ImageView
                    android:id="@+id/frag_audio_save"
                    android:layout_width="@dimen/ftr_icon_size"
                    android:layout_height="@dimen/ftr_icon_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/default_padding"
                    android:contentDescription="@string/btn_save"
                    android:src="@drawable/icn_save" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/thumbnail_height"
            android:id="@+id/frag_audio_func"
            android:orientation="horizontal">

            <View
                android:id="@+id/frag_audio_visualizer"
                android:background="@color/custDarkGrey"
                android:layout_centerHorizontal="true"
                android:layout_height="14dp"
                android:layout_width="@dimen/shutter_margin_bottom"
                android:layout_alignBottom="@+id/frag_audio_tvsound"
                android:layout_alignTop="@+id/frag_audio_tvsound" />

            <Chronometer
                android:id="@+id/frag_audio_chrono"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/shutter_margin_bottom"/>

            <TextView
                android:id="@+id/frag_audio_tvlast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/record_duration_text"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:visibility="invisible"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/shutter_size"/>

            <TextView
                android:text="Microphone Input:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frag_audio_tvsound"
                android:textStyle="normal|bold"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginBottom="@dimen/shutter_size"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frag_audio_btn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@android:dimen/thumbnail_height">

            <ImageView
                android:layout_marginBottom="@dimen/shutter_margin_bottom"
                android:id="@+id/frag_audio_btn_main"
                android:layout_width="@dimen/shutter_size"
                android:layout_height="@dimen/shutter_size"
                android:src="@drawable/icn_rec_mic"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_marginBottom="@dimen/shutter_margin_bottom"
                android:id="@+id/frag_audio_btn_stop"
                android:src="@drawable/icn_rec_stop"
                android:layout_width="@dimen/shutter_size"
                android:layout_height="@dimen/shutter_size"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/frag_audio_btn_pause"
                android:layout_width="@dimen/audio_icn_size"
                android:layout_height="@dimen/audio_icn_size"
                android:src="@drawable/icn_rec_pause"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/shutter_margin_bottom"
                android:layout_marginBottom="@dimen/shutter_margin_bottom"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
