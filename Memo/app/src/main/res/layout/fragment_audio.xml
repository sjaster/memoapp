<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.nicco.memo.memo.frag_audio">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/default_padding">

            <Button
                android:id="@+id/frag_audio_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_stop"
                android:textStyle="normal|bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/frag_audio_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_pause"
                android:textStyle="normal|bold"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/frag_audio_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_start"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Chronometer
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frag_audio_chrono"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_marginBottom="22dp"
                android:layout_above="@+id/frag_audio_stop"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
