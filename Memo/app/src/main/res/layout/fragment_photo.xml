<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.nicco.memo.memo.frag_photo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextureView
            android:id="@+id/frag_photo_preview_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/frag_photo_shutter_btn"
            android:layout_width="@dimen/shutter_size"
            android:layout_height="@dimen/shutter_size"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/shutter_margin_bottom"
            android:background="@drawable/shutter_btn" />

        <ImageView
            android:id="@+id/frag_photo_change_btn"
            android:layout_width="@dimen/shutter_rotate"
            android:layout_height="@dimen/shutter_rotate"
            android:layout_alignBottom="@+id/frag_photo_shutter_btn"
            android:layout_marginStart="@dimen/audio_margin_pause"
            android:layout_toEndOf="@+id/frag_photo_shutter_btn"
            android:src="@drawable/icn_rotate" />

    </RelativeLayout>

</FrameLayout>
