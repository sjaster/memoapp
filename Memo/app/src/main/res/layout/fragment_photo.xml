<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.nicco.memo.memo.frag_photo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextureView
            android:id="@+id/frag_photo_preview_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/frag_photo_shutter_btn"
            android:layout_width="@dimen/shutter_size"
            android:layout_height="@dimen/shutter_size"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/shutter_margin_bottom"
            android:background="@drawable/shutter_btn" />

    </RelativeLayout>

</FrameLayout>
