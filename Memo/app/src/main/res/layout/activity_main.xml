<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.nicco.memo.memo.Main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ftr_indicator_w"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ftr_height">

        <LinearLayout
            android:id="@+id/ftr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/custLightGrey"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/menu_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ftr_img_list"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    android:contentDescription="@string/menu_txt_list"
                    android:src="@drawable/icn_list" />

                <TextView
                    android:id="@+id/ftr_txt_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_txt_list"
                    android:textAlignment="center"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ftr_img_text"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    android:contentDescription="@string/menu_txt_text"
                    android:src="@drawable/icn_file" />

                <TextView
                    android:id="@+id/ftr_txt_add_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_txt_text"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ftr_img_photo"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    android:contentDescription="@string/menu_txt_photo"
                    android:src="@drawable/icn_camera" />

                <TextView
                    android:id="@+id/ftr_txt_add_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_txt_photo"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_audio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ftr_img_audio"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    android:contentDescription="@string/menu_txt_audio"
                    android:src="@drawable/icn_microphone" />

                <TextView
                    android:id="@+id/ftr_txt_add_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_txt_audio"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ftr_img_settings"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    android:contentDescription="@string/menu_txt_settings"
                    android:src="@drawable/icn_cog" />

                <TextView
                    android:id="@+id/ftr_txt_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_txt_settings"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/ftr_indicator"
            android:layout_width="0dp"
            android:layout_height="@dimen/ftr_indicator_height"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark" />
    </RelativeLayout>

</LinearLayout>
